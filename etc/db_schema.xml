<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
<table name="merlin_intrusion_event" resource="default" engine="innodb" comment="Intrusion Events">
<column name="event_id" xsi:type="int" padding="10" unsigned="true" nullable="false" identity="true" comment="ID"/>
<column name="created_at" xsi:type="timestamp" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"/>
<column name="ip" xsi:type="varchar" length="45" nullable="false"/>
<column name="path" xsi:type="varchar" length="1024" nullable="false"/>
<column name="user_agent" xsi:type="varchar" length="512" nullable="true"/>
<column name="detector" xsi:type="varchar" length="128" nullable="false"/>
<column name="severity" xsi:type="varchar" length="32" nullable="false" default="low"/>
<column name="details" xsi:type="text" nullable="true"/>
<constraint xsi:type="primary" referenceId="PRIMARY">
<column name="event_id"/>
</constraint>
<index referenceId="MERLIN_INTRUSION_EVENT_IP" indexType="BTREE">
<column name="ip"/>
</index>
<index referenceId="MERLIN_INTRUSION_EVENT_CREATED_AT" indexType="BTREE">
<column name="created_at"/>
</index>
</table>

<table name="merlin_blocked_ip" resource="default" engine="innodb" comment="Blocked IPs">
<column name="block_id" xsi:type="int" padding="10" unsigned="true" nullable="false" identity="true"/>
<column name="ip" xsi:type="varchar" length="45" nullable="false"/>
<column name="reason" xsi:type="varchar" length="255" nullable="true"/>
<column name="created_at" xsi:type="timestamp" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"/>
<column name="expires_at" xsi:type="timestamp" nullable="true"/>
<constraint xsi:type="primary" referenceId="PRIMARY">
<column name="block_id"/>
</constraint>
<index referenceId="MERLIN_BLOCKED_IP_UNIQ" indexType="UNIQUE">
<column name="ip"/>
</index>
<index referenceId="MERLIN_BLOCKED_IP_EXPIRES" indexType="BTREE">
<column name="expires_at"/>
</index>
</table>
</schema>
