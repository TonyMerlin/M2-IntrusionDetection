<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

  <table name="merlin_intrusion_event" resource="default" engine="innodb" comment="Intrusion Events">
    <column name="event_id" xsi:type="int" unsigned="true" nullable="false" identity="true" comment="ID"/>
    <column name="created_at" xsi:type="timestamp" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At (UTC)"/>
    <column name="ip" xsi:type="varchar" length="45" nullable="false" comment="Client IP"/>
    <column name="path" xsi:type="varchar" length="1024" nullable="false" comment="Request Path"/>
    <column name="user_agent" xsi:type="varchar" length="512" nullable="true" comment="User Agent"/>
    <column name="detector" xsi:type="varchar" length="128" nullable="false" comment="Detector Name"/>
    <column name="severity" xsi:type="varchar" length="32" nullable="false" default="low" comment="Severity"/>
    <column name="details" xsi:type="text" nullable="true" comment="Details"/>
    <constraint xsi:type="primary"><column name="event_id"/></constraint>

    <index referenceId="MERLIN_ID_EVT_IP"><column name="ip"/></index>
    <index referenceId="MERLIN_ID_EVT_CREATED_AT"><column name="created_at"/></index>

    <!-- Disable legacy IDs that may exist from prior builds -->
    <index referenceId="MERLIN_INTRUSION_EVENT_IP" disabled="true"><column name="ip"/></index>
    <index referenceId="MERLIN_INTRUSION_EVENT_CREATED_AT" disabled="true"><column name="created_at"/></index>
  </table>

  <table name="merlin_blocked_ip" resource="default" engine="innodb" comment="Blocked IPs">
    <column name="block_id" xsi:type="int" unsigned="true" nullable="false" identity="true" comment="ID"/>
    <column name="ip" xsi:type="varchar" length="45" nullable="false" comment="Blocked IP"/>
    <column name="reason" xsi:type="varchar" length="255" nullable="true" comment="Reason"/>
    <column name="created_at" xsi:type="timestamp" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At (UTC)"/>
    <column name="expires_at" xsi:type="timestamp" nullable="true" comment="Expires At (UTC)"/>
    <constraint xsi:type="primary"><column name="block_id"/></constraint>

    <index referenceId="MERLIN_ID_BLOCKED_IP_UNIQ" indexType="UNIQUE"><column name="ip"/></index>
    <index referenceId="MERLIN_ID_BLOCKED_IP_EXPIRES"><column name="expires_at"/></index>

    <!-- Disable legacy IDs -->
    <index referenceId="MERLIN_BLOCKED_IP_IP" disabled="true"><column name="ip"/></index>
    <index referenceId="MERLIN_BLOCKED_IP_EXPIRES_AT" disabled="true"><column name="expires_at"/></index>
  </table>
</schema>
